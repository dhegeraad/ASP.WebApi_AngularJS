    <div class="col-sm-offset-2">

        <h3>Register</h3>

        <form ng-submit="register()" class="row">
            <div class="col-md-3">
                <div class="row"><input class="form-control" type="text" ng-model="username" placeholder="Username" /></div>
                <div class="row"><input class="form-control" type="password" ng-model="password1" placeholder="Password" /></div>
                <div class="row"><input class="form-control" type="password" ng-model="password2" placeholder="Confirm Password" /></div>
                <div class="row"><input class="btn btn-primary" type="submit" value="Register" /></div>
            </div>
        </form>
        <div class="row">
            <div class="col-md-3">
                <ul class="list-group" ng-show="showErrorMessage">
                    <li class="list-group-item" ng-repeat="message in errorMessages">
                        {{message}}
                    </li>
                </ul>
                <div class="row alert alert-success" ng-show="showSuccessMessage">{{successMessage}}</div>
            </div>
        </div>
    </div>
